<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="@color/orange"
    android:background="@color/orange"
    card_view:cardUseCompatPadding="true"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/user_info_container"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <RelativeLayout
                android:gravity="center"
                android:id="@+id/user_picture_container"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/user_image_loader"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

                <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_photo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/male_user_icon"
                    app:riv_border_width="1dip"
                    app:riv_corner_radius="10dip"
                    app:riv_border_color="@android:color/transparent"
                    app:riv_oval="false" />


            </RelativeLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_toRightOf="@+id/user_picture_container"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_corners_orange"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/user_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/student_name"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Student name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_corners_yellow"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/student_id_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/student_id"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Student ID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

