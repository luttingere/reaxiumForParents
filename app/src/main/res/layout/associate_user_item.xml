                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_corners_orange"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/school_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/school_name"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="School Name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_info_container">

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="5dp"
                    android:id="@+id/access_info_button"
                    android:background="@drawable/rounded_corners_orange"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:clickable="true">

                    <TextView
                        android:clickable="false"
                        android:text="Access Info"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:id="@+id/tracking_button"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/rounded_corners_green"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:clickable="true">

                    <TextView
                        android:clickable="false"
                        android:text="Track"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center" />


